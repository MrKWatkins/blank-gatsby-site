{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "factory",
    "target": "ESNext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "jsx": "react",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "noResolve": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src"
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.d.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
